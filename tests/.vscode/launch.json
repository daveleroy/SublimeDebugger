      "version": "0.2.0",
      "configurations": [
      {
            "type": "firefox",
            "request": "attach",
            "name": "Firefox",
      },
            {
                  "type": "firefox",
                  "request": "launch",
                  "reAttach": true,
                  "name": "Launch index.html",
                  "file": "${workspaceFolder}/index.html"
            },
            {
                  "name": "Chrome",
                  "type": "chrome",
                  "request": "launch",
                  "file":"${workspaceFolder}/index.html"
            },
            {
                  "name": "Debug the debugger...",
                  "type": "python",
                  "request": "attach",
                  "port": 5678,
                      "host": "localhost",
            },
            {
                  "name": "Python (main.py)",
                  "type": "python",
                  "request": "launch",
                  "program": "${workspaceFolder}/main.py",
                  "debugOptions" : [
                        "RedirectOutput"
                  ]
            }
      ]
}
